@page
@model RazorPageMVCSampleProject.Pages.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create the Book list</h1>
<br />

<div class="border container">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="book.BookName"></label>
            </div>
            <div class="col-6">
                <input asp-for="book.BookName" class="form-control" />
            </div>
            <span asp-validation-for="book.BookName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="book.AuthorName"></label>
            </div>
            <div class="col-6">
                <input asp-for="book.AuthorName" class="form-control" />
            </div>
            <span asp-validation-for="book.AuthorName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="book.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="book.AuthorName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-6">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div> 

